<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.image.ImageView?>
<BorderPane fx:id="container" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.crypts.HangManController">
    <top>
        <FlowPane hgap="10" vgap="10" BorderPane.alignment="TOP_CENTER">
            <Label text="Chances =" textFill="white" >
                <padding>
                    <Insets left="150" top="15"/>
                </padding>
                <effect>
                    <DropShadow blurType="ONE_PASS_BOX" height="26.45" radius="13.695" spread="1.0" width="30.33" />
                </effect>
                <font>
                    <Font name="Copperplate Gothic Bold" size="50"/>
                </font>
            </Label>
            <Label fx:id="chances" text="7" textFill="white">
                <padding>
                    <Insets top="15"/>
                </padding>
                <effect>
                    <DropShadow blurType="ONE_PASS_BOX" height="26.45" radius="13.695" spread="1.0" width="30.33" />
                </effect>
                <font>
                    <Font name="Copperplate Gothic Bold" size="50"/>
                </font>
            </Label>
        </FlowPane>
    </top>
    <left>
        <FlowPane>
            <FlowPane>
                <ImageView fx:id="hangmanImage" fitHeight="250" fitWidth="250" preserveRatio="true"/>
                <FlowPane.margin>
                    <Insets left="150"/>
                </FlowPane.margin>
            </FlowPane>
            <FlowPane fx:id="containerForGameWord" BorderPane.alignment="BOTTOM_CENTER" minWidth="250">
                <FlowPane.margin>
                    <Insets left="150" top="20"/>
                </FlowPane.margin>
            </FlowPane>
        </FlowPane>
    </left>
    <right>
        <FlowPane hgap="10" vgap="10" BorderPane.alignment="CENTER" prefWidth="300">
            <Button text="A" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="B" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="C" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="D" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="E" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="F" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="G" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="H" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="I" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="J" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="K" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="L" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="M" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="N" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="O" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="P" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="Q" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="R" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="S" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="T" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="U" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="V" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="W" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="X" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="Y" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="Z" minWidth="30" onAction="#characterChosen" textFill="white"
                    style="-fx-background-color: #5bc0de;"/>
            <Button text="Hint" minWidth="70" onAction="#getHint" textFill="white"
                    style="-fx-background-color: #ffc107;"/>
            <padding>
                <Insets top="35" right="110"/>
            </padding>
        </FlowPane>
    </right>
    <bottom>
        <GridPane alignment="TOP_RIGHT" hgap="10" vgap="10" BorderPane.alignment="TOP_CENTER">
            <Button minHeight="40" minWidth="80" mnemonicParsing="false" onMouseClicked="#getHangMan"
                    style="-fx-background-color: #007bff;" text="Reset Game" textFill="WHITE" GridPane.columnIndex="1"
                    GridPane.rowIndex="0">
                <font>
                    <Font size="18.00"/>
                </font>
            </Button>
            <Button minHeight="40" minWidth="80" mnemonicParsing="false" onMouseClicked="#getGamesPage"
                    style="-fx-background-color: #DC143C;" text="Back" textFill="WHITE" GridPane.columnIndex="2"
                    GridPane.rowIndex="0">
                <font>
                    <Font size="18.00"/>
                </font>
            </Button>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </bottom>
</BorderPane>
