<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<Pane fx:id="container" prefHeight="460" prefWidth="900" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.crypts.TicTacToeController">
    <FlowPane fx:id="container2" alignment="CENTER" hgap="10" prefHeight="460" prefWidth="900" vgap="10">
        <Button alignment="CENTER_RIGHT" style="-fx-background-color: #007bff;" text="Start Game" textFill="WHITE"
                onMouseClicked="#startGame">
            <font>
                <Font size="18.00"/>
            </font>
        </Button>
        <Button onMouseClicked="#getGamesPage" style="-fx-background-color: #DC143C;" text="Back" textFill="WHITE">
            <font>
                <Font size="18.00"/>
            </font>
        </Button>
    </FlowPane>
    <GridPane fx:id="container3" alignment="CENTER" visible="false" hgap="10" vgap="10" prefWidth="900"
              prefHeight="460">
        <ImageView fx:id="topRight" onMouseClicked="#handleAction" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="topCenter" onMouseClicked="#handleAction" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="topLeft" onMouseClicked="#handleAction" GridPane.columnIndex="2" GridPane.rowIndex="0"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="middleRight" onMouseClicked="#handleAction" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="middleCenter" onMouseClicked="#handleAction" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="middleLeft" onMouseClicked="#handleAction" GridPane.columnIndex="2" GridPane.rowIndex="1"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="bottomRight" onMouseClicked="#handleAction" GridPane.columnIndex="2" GridPane.rowIndex="2"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="bottomCenter" onMouseClicked="#handleAction" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   fitWidth="125" fitHeight="126"/>
        <ImageView fx:id="bottomLeft" onMouseClicked="#handleAction" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   fitWidth="125" fitHeight="126"/>
    </GridPane>
</Pane>
