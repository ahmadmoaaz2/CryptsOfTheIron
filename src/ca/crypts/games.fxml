<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="container" alignment="CENTER" hgap="50.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.crypts.GamesController">
   <children>
      <BorderPane GridPane.columnIndex="0">
         <top>
            <Label text="Hang Man" textFill="white" BorderPane.alignment="TOP_CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin></Label>
         </top>
         <center>
            <ImageView fx:id="image1" fitHeight="90" fitWidth="90" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <Button style="-fx-background-color: #007bff;" text="Play" textFill="white" BorderPane.alignment="BOTTOM_CENTER"
                    onMouseClicked="#getHangMan">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin></Button>
         </bottom>
      </BorderPane>
      <BorderPane GridPane.columnIndex="1">
         <top>
            <Label text="Box Run" textFill="white" BorderPane.alignment="TOP_CENTER"/>
         </top>
         <center>
            <ImageView fx:id="image2" fitHeight="90" fitWidth="90" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <Button style="-fx-background-color: #007bff;" text="Play" textFill="white" BorderPane.alignment="BOTTOM_CENTER" />
         </bottom>
      </BorderPane>
      <BorderPane GridPane.columnIndex="2">
         <top>
            <Label text="Tic Tac Toe" textFill="white" BorderPane.alignment="TOP_CENTER" />
         </top>
         <center>
            <ImageView fx:id="image3" fitHeight="90" fitWidth="90" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <Button style="-fx-background-color: #007bff;" text="Play" textFill="white" BorderPane.alignment="BOTTOM_CENTER" />
         </bottom>
      </BorderPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
